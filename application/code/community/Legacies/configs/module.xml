<config>
  <default>
    <modules>
      <Legacies>
        <version>2011.1.0</version>
        <stage>alpha1</stage>
      </Legacies>
    </modules>

    <resource>
      <dal>
        <database>
          <legacies>
            <namespace>Legacies_Dal_Database</namespace>
            <connection>
              <read>legacies_read</read>
              <write>legacies_write</write>
              <setup>legacies_setup</setup>
            </connection>
          </legacies>
        </database>
        <entities>
          <legacies>
            <aks>
              <table>legacies_aks</table>
            </aks>
            <alliance>
              <table>legacies_alliance</table>
            </alliance>
            <annonce>
              <table>legacies_annonce</table>
            </annonce>
            <banned>
              <table>legacies_banned</table>
            </banned>
            <buddy>
              <table>legacies_buddy</table>
            </buddy>
            <chat>
              <table>legacies_chat</table>
            </chat>
            <config>
              <table>legacies_config</table>
            </config>
            <declared>
              <table>legacies_declared</table>
            </declared>
            <errors>
              <table>legacies_errors</table>
            </errors>
            <fleets>
              <table>legacies_fleets</table>
            </fleets>
            <galaxy>
              <table>legacies_galaxy</table>
            </galaxy>
            <iraks>
              <table>legacies_iraks</table>
            </iraks>
            <lunas>
              <table>legacies_lunas</table>
            </lunas>
            <messages>
              <table>legacies_messages</table>
            </messages>
            <multi>
              <table>legacies_multi</table>
            </multi>
            <notes>
              <table>legacies_notes</table>
            </notes>
            <planets>
              <table>legacies_planets</table>
            </planets>
            <rw>
              <table>legacies_rw</table>
            </rw>
            <statpoints>
              <table>legacies_statpoints</table>
            </statpoints>
            <users>
              <table>legacies_users</table>
            </users>
          </legacies>
        </entities>
      </dal>
      <dao>
        <namespace>Legacies_Resource_Dao</namespace>
      </dao>
    </resource>
    
    <model>
      <legacies>
        <namespace>Legacies_Model</namespace>
      </legacies>
    </model>

    <general>
      <database>
        <connection>
          <legacies_setup>
            <use>core_setup</use>
          </legacies_setup>
          <legacies_read>
            <use>core_read</use>
          </legacies_read>
          <legacies_write>
            <use>core_write</use>
          </legacies_write>
        </connection>
      </database>
    </general>
  </default>
</config>