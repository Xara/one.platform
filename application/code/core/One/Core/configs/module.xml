<config>
  <default>
    <modules>
      <One_Core>
        <version>0.1.0</version>
      </One_Core>
    </modules>

    <model>
      <core>
        <namespace>One_Core_Model</namespace>
      </core>
    </model>

    <exception>
      <core>
        <namespace>One_Core_Exception</namespace>
      </core>
    </exception>

    <block>
      <core>
        <namespace>One_Core_Block</namespace>
      </core>
    </block>

    <resource>
      <dao>
        <core>
          <namespace>One_Core_Resource_Dao</namespace>
        </core>
      </dao>
      <orm>
        <core>
          <namespace>One_Core_Resource_Orm</namespace>
        </core>
      </orm>
      <dal>
        <database>
          <core>
            <namespace>One_Core_Dal_Database</namespace>
            <connection>
              <read>core_read</read>
              <write>core_write</write>
              <setup>core_setup</setup>
            </connection>
          </core>
        </database>
      </dal>
    </resource>
    
    <general>
      <layout>
        <core>core.xml</core>
      </layout>
    </general>
  </default>
</config>