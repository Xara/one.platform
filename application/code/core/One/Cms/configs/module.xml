<config>
  <default>
    <modules>
      <One_Cms>
        <version>0.1.2</version>
      </One_Cms>
    </modules>

    <system>
      <routes>
        <cms>
          <type value="cms/router.route" />
          <defaults>
            <module value="One_Cms" />
            <controller value="display" />
            <action value="page" />
            <page-id value="homepage" />
            <layout>cms.page</layout>
          </defaults>
        </cms>
      </routes>
    </system>

    <model>
      <cms>
        <namespace>One_Cms_Model</namespace>
      </cms>
    </model>

    <exception>
      <cms>
        <namespace>One_Cms_Exception</namespace>
      </cms>
    </exception>

    <block>
      <cms>
        <namespace>One_Cms_Block</namespace>
      </cms>
    </block>

    <resource>
      <dao>
        <cms>
          <namespace>One_Cms_Resource_Dao</namespace>
        </cms>
      </dao>
      <orm>
        <cms>
          <namespace>One_Cms_Resource_Orm</namespace>
        </cms>
      </orm>
      <dal>
        <database>
          <cms>
            <namespace>One_Cms_Dal_Database</namespace>
            <connection>
              <read>cms_read</read>
              <write>cms_write</write>
              <setup>cms_setup</setup>
            </connection>
          </cms>
        </database>
        <entities>
          <cms>
            <page>
              <table>cms_page</table>
            </page>
          </cms>
        </entities>
      </dal>
    </resource>
    <general>
      <database>
        <connection>
          <cms_setup>
            <use>core_setup</use>
          </cms_setup>
          <cms_read>
            <use>core_read</use>
          </cms_read>
          <cms_write>
            <use>core_write</use>
          </cms_write>
        </connection>
      </database>
      <layout>
        <cms>cms.xml</cms>
      </layout>
    </general>
  </default>
</config>