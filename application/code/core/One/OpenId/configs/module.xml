<config>
  <default>
    <modules>
      <One_OpenId>
        <version>0.1.0</version>
      </One_OpenId>
    </modules>

    <model>
      <openid>
        <namespace>One_OpenId_Model</namespace>
      </openid>
    </model>

    <resource>
      <dao>
        <openid>
          <namespace>One_OpenId_Resource_Dao</namespace>
        </openid>
      </dao>
      <orm>
        <openid>
          <namespace>One_OpenId_Resource_Orm</namespace>
        </openid>
      </orm>
      <dal>
        <database>
          <openid>
            <namespace>One_OpenId_Dal_Database</namespace>
            <connection>
              <read>openid_read</read>
              <write>openid_write</write>
              <setup>openid_setup</setup>
            </connection>
          </openid>
        </database>
        <entities>
          <openid>
            <website>
              <table>openid_website</table>
            </website>
            <website>
              <table>openid_website</table>
            </website>
          </openid>
        </entities>
      </dal>
    </resource>

    <exception>
      <openid>
        <namespace>One_OpenId_Exception</namespace>
      </openid>
    </exception>

    <general>
      <database>
        <connection>
          <openid_setup>
            <use>core_setup</use>
          </openid_setup>
          <openid_read>
            <use>core_read</use>
          </openid_read>
          <openid_write>
            <use>core_write</use>
          </openid_write>
        </connection>
      </database>
    </general>
  </default>
</config>