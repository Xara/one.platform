                <disableTranslator>0</disableTranslator>
                <validators>
                  <required>
                    <validator>NotEmpty</validator>
                  </required>
                </validators>
              </options>
            </html>
          </elements>
        </cms-page-layout>
      </forms>
    </general>
  </default>
</config>