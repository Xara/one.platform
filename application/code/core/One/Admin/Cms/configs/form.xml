<?xml version="1.0" encoding="UTF-8"?>
<config>
  <default>
    <general>
      <forms>
        <cms-page-general>
          <attribs>
            <id>cms_page_general</id>
          </attribs>
          <elements>
            <url-key>
              <type>textarea</type>
              <name>url-key</name>
              <options>
                <label>URL Key</label>
                <order>1</order>
