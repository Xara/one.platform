                <allowEmpty>1</allowEmpty>
                <attribs>
                  <id>general:url-key</id>
                </attribs>
                <disableTranslator>0</disableTranslator>
                <validators>
                  <required>
                    <validator>NotEmpty</validator>
                  </required>
                </validators>
              </options>
            </url-key>
          </elements>
        </cms-page-general>
        <cms-page-content>
          <attribs>
            <id>cms_page_content</id>
          </attribs>
          <elements>
