                  <id>meta:keywords</id>
                </attribs>
                <disableTranslator>0</disableTranslator>
                <validators>
                  <required>
                    <validator>NotEmpty</validator>
                  </required>
                </validators>
              </options>
            </keywords>
            <description>
              <type>textarea</type>
              <name>description</name>
              <options>
                <label>Meta Description</label>
                <order>4</order>
                <required>1</required>
                <allowEmpty>1</allowEmpty>
                <attribs>
                  <id>meta:description</id>
                </attribs>
                <disableTranslator>0</disableTranslator>
                <validators>
                  <required>
                    <validator>NotEmpty</validator>
                  </required>
                </validators>
              </options>
