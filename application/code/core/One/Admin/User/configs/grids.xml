<?xml version="1.0" encoding="UTF-8"?>
<config>
  <default>
    <general>
      <grids>
        <user-entities>
          <index>
            <type>admin.core/grid.column.indexer</type>
            <params>
              <width>50</width>
              <align>center</align>
            </params>
          </index>
          <entity_id>
            <type>admin.core/grid.column.entity</type>
            <params>
              <field>entity_id</field>
              <label>#</label>
              <width>100</width>
              <align>left</align>
            </params>
          </entity_id>
          <path>
            <type>admin.core/grid.column.string</type>
            <params>
              <field>username</field>
              <label>Username</label>
              <width>150</width>
              <align>left</align>
            </params>
          </path>
          <title>
            <type>admin.core/grid.column.string</type>
            <params>
              <field>realname</field>
              <label>Real name</label>
              <width>200</width>
              <align>left</align>
            </params>
          </title>
          <website>
            <type>admin.core/grid.column.select</type>
            <params>
              <field>website_id</field>
              <label>Website</label>
              <align>left</align>
              <width>100</width>
              <collection>
                <model>core/website.collection</model>
              </collection>
            </params>
          </website>
          <content>
            <type>admin.core/grid.column.select</type>
            <params>
              <field>content</field>
              <label>Primary Group</label>
              <align>left</align>
              <width>100</width>
              <collection>
                <model>user/group.collection</model>
              </collection>
            </params>
          </content>
          <action>
            <type>admin.core/grid.column.action</type>
            <params>
              <width>50</width>
            </params>
          </action>
        </user-entities>
      </grids>
    </general>
  </default>
</config>