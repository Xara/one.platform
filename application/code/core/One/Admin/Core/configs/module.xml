<config>
  <default>
    <modules>
      <One_Admin_Core>
        <version>0.1.0</version>
      </One_Admin_Core>
    </modules>

    <model>
      <admin.core>
        <namespace>One_Admin_Core_Model</namespace>
      </admin.core>
    </model>

    <exception>
      <admin.core>
        <namespace>One_Admin_Core_Exception</namespace>
      </admin.core>
    </exception>

    <block>
      <admin.core>
        <namespace>One_Admin_Core_Block</namespace>
      </admin.core>
    </block>

    <resource>
      <dao>
        <admin.core>
          <namespace>One_Admin_Core_Resource_Dao</namespace>
        </admin.core>
      </dao>
      <orm>
        <admin.core>
          <namespace>One_Admin_Core_Resource_Orm</namespace>
        </admin.core>
      </orm>
      <dal>
        <database>
          <admin.core>
            <namespace>One_Admin_Core_Dal_Database</namespace>
            <connection>
              <read>admin_core_read</read>
              <write>admin_core_write</write>
              <setup>admin_core_setup</setup>
            </connection>
          </admin.core>
        </database>
      </dal>
    </resource>
    
    <general>
      <layout>
        <admin.core>core.xml</admin.core>
      </layout>
      
      <forms>
        <admin-user-entity>
          <actions>
            <submit>
              <params>
                <controller>grid</controller>
                <action>form-post</action>
              </params>
            </submit>
            <success>
              <params>
                <controller>grid</controller>
              </params>
            </success>
            <error>
              <params>
                <controller>grid</controller>
                <action>form</action>
              </params>
            </error>
          </actions>
          <fieldsets>
            <login />
          </fieldsets>
          <params>
            <name>login</name>
          </params>
        </admin-user-entity>
      </forms>

    </general>
  </default>
</config>